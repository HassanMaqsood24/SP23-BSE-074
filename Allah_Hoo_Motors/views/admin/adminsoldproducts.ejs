<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sold Products â€¢ Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    :root {
      --product-bg-dark: #2c3e50;
      --product-bg-light: #f5f5f5;
      --btn-bg-dark: #4f6f96;
      --btn-bg-dark-hover: #3d4f77;
      --text-light: #f1f1f1;
    }
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: var(--product-bg-light);
    }
    .navbar-custom {
      background-color: #2c3e50;
    }
    .navbar-custom .nav-link,
    .navbar-custom .navbar-brand {
      color: #ffffff;
    }
    .navbar-custom .nav-link.active {
      font-weight: bold;
      text-decoration: underline;
    }
    .product-section {
      background: var(--product-bg-dark);
      padding: 24px;
      margin: 20px;
      border-radius: 14px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
      color: var(--text-light);
    }
    .btn-custom {
      background: var(--btn-bg-dark);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 10px 20px;
      transition: background-color 0.3s ease;
    }
    .btn-custom:hover {
      background: var(--btn-bg-dark-hover);
    }
    .table.table-dark {
      background: var(--product-bg-light);
      color: var(--text-light);
    }
    .table.table-dark th {
      background: var(--btn-bg-dark);
      color: #fff;
    }
    .table.table-dark tbody tr:hover {
      background: var(--btn-bg-dark-hover);
    }
    .img-thumbnail {
      width: 80px;
      border-radius: 6px;
      object-fit: cover;
    }
    .action-btns .btn {
      margin-right: 4px;
    }
    .modal-content {
  background-color: #2c3e50;
  color: #fff;
}

.modal-content input,
.modal-content select {
  background-color: #34495e;
  color: #fff;
  border: 1px solid #666;
}

.modal-content label {
  color: #fff;
}

  </style>
</head>
<body>

  <!-- âœ… Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid px-4">
      <a class="navbar-brand" href="/admin/adminpanel">Admin Panel</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/admin/adminpanel">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/soldproducts">Sold Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/adminproducts">Manage Products</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- ðŸŸ© Sold Products Table -->
  <div class="product-section">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>Sold Products</h4>
    </div>

    <div class="table-responsive">
      <table class="table table-dark align-middle mb-0">
        <thead>
          <tr>
            <th>Title</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Sold Price</th>
            <th>Year</th>
            <th>Picture</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(p => { %>
            <tr>
              <td><%= p.title %></td>
              <td><%= p.brand %></td>
              <td><%= p.model %></td>
              <td>PKR <%= p.price.toLocaleString() %></td>
              <td><%= p.year %></td>
              <td>
                <% if (p.pictures && p.pictures.length > 0) { %>
                  <img src="/uploads/<%= p.pictures[0] %>" class="img-thumbnail" />
                <% } else { %>
                  <span class="text-muted">No Image</span>
                <% } %>
              </td>
<td class="action-btns">
  <a href="/product/<%= p._id %>" class="btn btn-sm btn-info me-1" title="View Details">
    <i class="fas fa-arrow-right"></i> View
  </a>

 <!-- Button -->
<button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#buyAgainModal<%= p._id %>">Buy Again</button>

<!-- Modal -->
<div class="modal fade" id="buyAgainModal<%= p._id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/admin/adminproducts/buyagain/<%= p._id %>" method="POST">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Buy Again: <%= p.title %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label>New Cost</label>
            <input type="number" name="cost" class="form-control" required />
          </div>
          <div class="mb-3">
            <label>New Sale Price</label>
            <input type="number" name="price" class="form-control" required />
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Buy Again</button>
        </div>
      </div>
    </form>
  </div>
</div>


</td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
